<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("includes/head.ejs") %>
    <link rel="stylesheet" href="/styles/signup.css" />
    <title>Login</title>
  </head>
  <body>
    <header id="main-header"><%- include("includes/header.ejs") %></header>
    <main>
      <form action="/login" method="POST">
        <h1>Login</h1>
        <% if (inputData.hasError){ %>
        <p id="error"><%= inputData.message %></p>
        <%}%>
        <section>
          <div>
            <label for="user-email">Email</label>
            <input type="text" id="user-email" name="user-email" />
          </div>
          <div>
            <label for="user-password">Password</label>
            <input type="text" id="user-password" name="user-password" />
          </div>
        </section>
        <section id="btn-log">
          <button class="btn">Login</button>
        </section>
      </form>
    </main>
  </body>
</html>
