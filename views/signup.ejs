<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("includes/head.ejs") %>
    <link rel="stylesheet" href="/styles/signup.css" />
    <title>Signup</title>
  </head>
  <body>
    <header id="main-header"><%- include("includes/header.ejs") %></header>
    <main>
      <form action="/signup" method="POST">
        <h1>Signup</h1>
        <% if (inputData.hasError){ %>
        <p id="error"><%= inputData.message %></p>
        <%}%>
        <section>
          <div>
            <label for="user-email">Email</label>
            <input
              type="email"
              id="user-email"
              name="user-email"
              value="<%=inputData.email%>"
              required
            />
          </div>
          <div>
            <label for="user-confirm">Confirm Email</label>
            <input
              type="email"
              id="user-confirm"
              name="user-confirm"
              value="<%=inputData.confirmEmail%>"
              required
            />
          </div>
          <div>
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required />
          </div>
        </section>
        <section id="btn-log">
          <button class="btn">Signup</button>
        </section>
      </form>
    </main>
  </body>
</html>
